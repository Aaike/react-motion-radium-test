# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# do not trim white spaces in documents where markdown might be used
[**.html, *.md, *.js, *.jsx]
trim_trailing_whitespace = false
